  
@{
    ViewBag.Title = "Index";
}
<h2>List Of Exams</h2>
<div ng-controller="ExamController as model" ng-init="model.Initialise()">
    <div class="row">
        <div class="col-sm-1">
            <a href="../Exam/Create" class="btn btn-default">Create</a>
        </div>
        <div class="col-sm-5 pull-right">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for names.." ng-model="model.ExamFilter.Names">
                <span class="input-group-btn">
                    <button id="searchLogo" class="btn btn-default" ng-click="model.Rfilter()"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </div>   
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-sm table-bordered ">
                <thead>
                    <tr class="thead-inverse">
                        <th width="6%">Exam ID</th>
                        <th width="13%">Time Limit (Minutes)</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Instructions</th>
                        <th>Copyright</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="clickableRow" ng-repeat="exam in model.Exams"|filter:SearchExam" ng-click="$event.originalEvent.dropdown || model.GoToUpdatePage(exam.ExamId)">
                        <td><span ng-bind="exam.ExamId"></span></td>
                        <td><span ng-bind="exam.TimeLimit"></span></td>
                        <td><span ng-bind="exam.Name"></span></td>
                        <td><span ng-bind="exam.Description"></span></td>
                        <td><span ng-bind="exam.Instructions"></span></td>
                        <td><span ng-bind="exam.Copyright"></span></td>
                        <td ng-click="$event.originalEvent.dropdown = true">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#" ng-click="model.GoToUpdatePage(exam.ExamId)">Edit</a></li>
                                    <li><a href="#" ng-click="model.Delete(exam)">Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>